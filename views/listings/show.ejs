<% layout('/layouts/boilerplate') -%>
    <div class="row mt-3 offset-3">
        <div class="col-8 ">
            <h3> <%= listing.title%> </h3>
        </div>

        <div class="card col-6 listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img " alt="listings_image">
            <div class="card-body">
                <p class="card-text"> <i> Owned by - <%= listing.owner.username %></i> </p>  
                <p class="card-text"> <b><%= listing.title%> </b> </p>
                <p class="card-text"> <%= listing.description%> <br> </p>
                <p class="card-text"> &#8377;<%= listing.price.toLocaleString("en-IN")%> <br> </p>
                <p class="card-text"> <%= listing.location%> <br> </p>
                <p class="card-text"> <%= listing.country%> <br> </p>
            </div>
            
        </div>
        
        
            <div class="btns ">
                <div class="col-1  btns">
                    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn ">edit</a>
                </div>
            
                <div class="col-2 btns">
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button type="submit" class="btn btn-dark add-btn offset-5  ">Delete</button>
                    </form>
                </div>
            </div>
        

        &nbsp; <br/> &nbsp; <hr>
        <!-- review input -->

        <div class="col-8  ">
                <h5>Leave a review</h5>
            <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate> 
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label" >Rating</label>
                    <input  type="range"  class="form-range" step="0.5" min="1" max="5" value="2"  name="review[rating]"  id="rating"/>
                    <output for="range4" id="rangeValue" aria-hidden="true"></output>
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" class="form-control" id="comment" cols="30" rows="5" placeholder="----Give your valuable feedback----" required></textarea>
                    <div class="invalid-feedback">Please enter your valuable feedback</div>
                </div>
                <button class="btn btn-outline-dark"> Submit</button>
            </form>
            <br>
        </div>

        <hr>

        <p><b>All Reviews</b></p>
        <div class="row">
            <% for (let review of listing.reviews  ){ %>

                <div class="card col-5 ms-3 mb-3" >
                    <div class="card-body ">
                        <h5 class="card-title">User </h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">wanderer</h6>
                        <p class="card-text"> <%= review.comment %> </p>  
                        <p class="card-text"> <%= review.rating%>&#9733;</p>
                    
                        <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%=review._id%>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                </div>                
            <%}%>
        </div>
    </div>
