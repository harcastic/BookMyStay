<% layout('/layouts/boilerplate') -%>

    
    <div class="row mt-3" >
        <div class="col-8 offset-2"> 
            <h4>Create new Listing</h4>
            <form method="post" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter title" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a title </div>
                </div>
                
                <div class="mb-3">
                    <label for="title" class="form-label">Description</label>
                    <input name="listing[description]" placeholder="enter description" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a description</div>
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Image</label>
                    <input name="listing[image]" placeholder="enter image" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="title" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="1200" class="form-control" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter the price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="title" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" class="form-control" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter a valid country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Delhi" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
                
                <button class="btn add-btn mt-3">Add</button>
            </form>
        </div>
    </div>

